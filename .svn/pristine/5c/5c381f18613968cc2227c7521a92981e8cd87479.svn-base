/*.previewConnectedSortable added by megala*/
.connectedSortable, .previewConnectedSortable {
	list-style: 	none;
	float: 		left; 
	margin-top:      15px;
	margin-right:    2px;
}
/*.previewConnectedSortable li added by megala*/
.connectedSortable li, .previewConnectedSortable li {
	display: block;
	/* padding-top:    8px;  */
	padding-bottom: 8px; 
	margin-bottom:  2px;
	/*margin-left: 10px;*/
	/* width:       	  95% ; */
	/* background-color: #e8e8e8; */
	background-color: transparent ;
}

.connectedSortable li.elt_head {
	padding-top:    2px; 
	padding-bottom: 2px; 
	margin-right:  2px;
	margin-left:   2px;
	/*background-color: #AAA;*/
	background-color: #848484;
	text-align: left;
	color: #000;
	/* border-radius: 5px;
	-moz-border-radius: 5px; */
}

.connectedSortable li img.handle{
	cursor: move;
	float: right; 
}

.mxml {
	/*width: 97%;*/
	padding: 6px; 
	overflow: auto;
	background-color: #fff;
	background-image: none;
	background-repeat: repeat;
	background-attachment: scroll;
	background-position: 0% 0%;
	color: #000000;
	border: 2px solid #D0D0D0;
	/*border-radius: 5px;*/
	-moz-border-radius: 5px;
	/*margin: 5px;*/
 	height: 480px; 
	overflow-x:hidden;
	overflow-y:auto;
	padding-left: 10px;
}

.form_title{
	background-color: #065C93;
