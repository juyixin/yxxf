/**
 * Menu de gauche
 */
.rb_menu {
  background-color: transparent;
  margin-top:     0px;
  margin-bottom:  0px;
  margin-left:    0px;
  margin-right:   0px;
  
  padding-bottom: 0px;
  padding-top:    0px;
  padding-right:  1px;
  padding-left:   1px;
  width:        150px;
}
.rb_menu li {
  padding-bottom: 3px;
  padding-top:    3px;
  vertical-align: middle;
  list-style:	  none;
}
.rb_menu li:hover {
  /*border:1px solid #aaa;*/
  background-color: #aaa;
  border-radius:5px;
  width:140px;
  color:white;
}
.rb_menu img {
   vertical-align: middle;
}


